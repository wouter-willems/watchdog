<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="nl.tudelft.watchdog.plugin.commands.StartUpHandler"></startup>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="TimeDistributionPlugin.actionSet"
            label="Sample Action Set"
            visible="true">
         <action
               class="nl.tudelft.watchdog.plugin.commands.ExportHandler"
               icon="resources/images/rsz_dog_icon.png"
               id="timeDistributionPlugin.toolbar.Export"
               label="Export"
               toolbarPath="wd"
               tooltip="Export">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="nl.tudelft.watchdog.plugin.PrefPage"
            id="TimeDistributionPlugin.PreferencePage"
            name="WatchDog">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="WatchDogPlugin"
            name="Sample Category">
      </category>
      <view
            category="WatchDogPlugin"
            class="watchdogplugin.views.SampleView"
            icon="icons/sample.gif"
            id="watchdogplugin.views.SampleView"
            name="Sample View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="watchdogplugin.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
